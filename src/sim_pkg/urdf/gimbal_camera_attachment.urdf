<?xml version="1.0"?>
<robot name="gimbal_camera_attachment" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- 云台基座 (将通过link_attacher附着到无人机) -->
  <link name="gimbal_base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.015"/>
      </geometry>
      <material name="gimbal_grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.015"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- 云台Yaw轴 -->
  <link name="gimbal_yaw_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.012"/>
      </geometry>
      <material name="gimbal_dark_grey">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    
    <!-- <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.012"/>
      </geometry>
    </collision> -->
    
    <inertial>
      <mass value="0.03"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- 云台Pitch轴 -->
  <link name="gimbal_pitch_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.035 0.015 0.015"/>
      </geometry>
      <material name="gimbal_dark_grey"/>
    </visual>
    
    <!-- <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.035 0.015 0.015"/>
      </geometry>
    </collision> -->
    
    <inertial>
      <mass value="0.02"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.0003" iyz="0" izz="0.0003"/>
    </inertial>
  </link>

  <!-- 相机 -->
  <link name="gimbal_camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.012"/>
      </geometry>
      <material name="camera_black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    
    <!-- <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.012"/>
      </geometry>
    </collision> -->
    
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- 相机光学坐标系 -->
  <link name="gimbal_camera_optical_link"/>

  <!-- 关节定义 -->
  
  <!-- Yaw轴关节 -->
  <joint name="gimbal_yaw_joint" type="revolute">
    <parent link="gimbal_base_link"/>
    <child link="gimbal_yaw_link"/>
    <origin xyz="0 0 -0.008" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="2" velocity="2"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- Pitch轴关节 -->
  <joint name="gimbal_pitch_joint" type="revolute">
    <parent link="gimbal_yaw_link"/>
    <child link="gimbal_pitch_link"/>
    <origin xyz="0 0 -0.008" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>  <!-- 反转Y轴方向，使正值向上 -->
    <limit lower="-0.6109" upper="1.5708" effort="2" velocity="2"/>  <!-- -35° to +90° -->
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- 相机关节 -->
  <joint name="gimbal_camera_joint" type="fixed">
    <parent link="gimbal_pitch_link"/>
    <child link="gimbal_camera_link"/>
    <origin xyz="0.02 0 0" rpy="0 0 0"/>
  </joint>

  <!-- 相机光学坐标系关节 -->
  <joint name="gimbal_camera_optical_joint" type="fixed">
    <parent link="gimbal_camera_link"/>
    <child link="gimbal_camera_optical_link"/>
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
  </joint>

  <!-- Gazebo材质 -->
  <gazebo reference="gimbal_base_link">
    <material>Gazebo/Grey</material>
  </gazebo>
  
  <gazebo reference="gimbal_yaw_link">
    <material>Gazebo/DarkGrey</material>
  </gazebo>
  
  <gazebo reference="gimbal_pitch_link">
    <material>Gazebo/DarkGrey</material>
  </gazebo>
  
  <gazebo reference="gimbal_camera_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- 相机传感器插件 -->
  <gazebo reference="gimbal_camera_link">
    <sensor type="camera" name="gimbal_camera_sensor">
      <update_rate>30.0</update_rate>
      <camera name="gimbal_cam">
        <horizontal_fov>1.3962634</horizontal_fov>  <!-- 80度视角 -->
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.005</stddev>
        </noise>
      </camera>
      <plugin name="gimbal_camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>uav1/gimbal_camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>gimbal_camera_optical_link</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Gazebo原生关节控制插件 -->
  <gazebo>
    <plugin name="gimbal_joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <jointName>gimbal_yaw_joint,gimbal_pitch_joint</jointName>
      <updateRate>50.0</updateRate>
      <alwaysOn>true</alwaysOn>
      <robotNamespace>/gimbal_camera_attachment</robotNamespace>
    </plugin>
  </gazebo>

</robot>
